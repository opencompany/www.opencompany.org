<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1&appId={{ site.sharing.facebook.appid }}";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="fb-like" data-send="false" data-layout="{{ site.sharing.facebook.layout }}" data-width="{{ site.sharing.facebook.width }}" data-show-faces="{{ site.sharing.facebook.faces }}" data-font="{{ site.sharing.facebook.font }}"></div>
